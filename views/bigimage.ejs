<%- include('./partials/header.ejs') %>
<div class="flex justify-center items-center min-h-screen bg-zinc-800 px-10 py-8 text-white">
    <div class="card w-full max-w-lg bg-gray-900 rounded-lg overflow-hidden shadow-lg">
        <div class="relative w-full h-96 bg-gray-800">
            <img class="w-full h-full object-cover" src="/images/uploads/<%= post.image %>" alt="">
        </div>
